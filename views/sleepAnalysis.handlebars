<canvas id="lengthChart" width="400" height="200"></canvas>

<script>
$(document).ready(function() {

	Chart.defaults.global.responsive = true;

	var sleepChart = $("#sleepChart").get(0).getContext("2d");
	var dreamChart = $("#dreamChart").get(0).getContext("2d");
	var environmentChart = $("#environmentChart").get(0).getContext("2d");
	var lengthChart = $("#lengthChart").get(0).getContext("2d");

	// Sleep Chart
	// console.log(JSON.stringify('{{{data}}}'));
	
	var options = {};

	new Chart(sleepChart).Bar({{{data.sleepData}}}, options);
	new Chart(dreamChart).Bar({{{data.dreamData}}}, options);
	new Chart(environmentChart).Bar({{{data.environmentData}}}, options);
	new Chart(lengthChart).Bar({{{data.lengthData}}}, options);

	});
</script>


<script src="Chart.js/Chart.min.js"></script>